{
  "name": "ng-lib-test",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:lib && npm run build:showcase",
    "build:lib": "ng build siga-test-lib",
    "build:showcase": "ng build showcase",
    "postbuild:lib": "npm run generate:toc && cp README.md dist/siga-test-lib && cp LICENSE dist/siga-test-lib",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:lib && npm run test:showcase",
    "test-coverage": "npm run test:lib-coverage && npm run test:showcase-coverage",
    "test:lib": "ng test siga-test-lib",
    "test:lib-coverage": "ng test siga-test-lib --code-coverage",
    "test:showcase": "ng test showcase",
    "test:showcase-coverage": "ng test showcase --code-coverage",
    "serve:ssr:showcase": "node dist/showcase/server/server.mjs",
    "lint": "npm run lint:lib && npm run lint:showcase",
    "lint:lib": "eslint \"projects/siga-test-lib/**/*.{ts,js}\" --fix",
    "lint:showcase": "eslint \"projects/showcase/**/*.{ts,js}\" --fix",
    "format:check-lib": "prettier --check \"projects/siga-test-lib/**/*.{ts,js,json,html,scss}\"",
    "format:check-showcase": "prettier --check \"projects/showcase/**/*.{ts,js,json,html,scss}\"",
    "format:check": "npm run format:check-lib && npm run format:check-showcase",
    "format:write-lib": "prettier --write \"projects/siga-test-lib/**/*.{ts,js,json,html,scss}\"",
    "format:write-showcase": "prettier --write \"projects/showcase/**/*.{ts,js,json,html,scss}\"",
    "format:write": "npm run format:write-lib && npm run format:write-showcase",
    "generate:toc": "npx doctoc README.md",
    "bump-version": "rjp package.json version $VERSION && rjp projects/siga-test-lib/package.json version $VERSION",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/platform-server": "^17.1.0",
    "@angular/router": "^17.1.0",
    "@angular/ssr": "^17.1.1",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.1",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "^17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-angular": "^18.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "all-contributors-cli": "^6.26.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.1.0",
    "prettier": "^3.2.4",
    "pretty-quick": "^4.0.0",
    "replace-json-property": "^1.9.0",
    "typescript": "~5.3.2"
  }
}
